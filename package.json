{
  "name": "ethereum-event-indexer",
  "version": "1.0.0",
  "description": "Production-ready Ethereum event indexer with REST API",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:indexer": "node src/indexer.js",
    "start:api": "node src/server.js",
    "backfill": "node src/backfill.js",
    "dev": "nodemon src/indexer.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate"
  },
  "keywords": [
    "ethereum",
    "indexer",
    "blockchain",
    "events",
    "web3",
    "ethers"
  ],
  "author": "Kelpejol",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
