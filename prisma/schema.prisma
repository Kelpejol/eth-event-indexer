datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model TransferEvent {
  id        Int      @id @default(autoincrement())
  from      String
  to        String
  value     String
  txHash    String   @unique
  blockNum  Int
  timestamp Int
}

model IndexerState {
  id        Int @id @default(1)
  lastBlock Int
}

