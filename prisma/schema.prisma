datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TransferEvent {
  id        Int      @id @default(autoincrement())
  from      String
  to        String
  value     String
  txHash    String   @unique
  blockNum  Int
  timestamp Int

  @@index([from])
  @@index([to])
  @@index([blockNum])
}

model IndexerState {
  id        Int @id @default(1)
  lastBlock Int
}
